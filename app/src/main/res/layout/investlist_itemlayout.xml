<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_bar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img_investlist"
            app:layout_constraintStart_toStartOf="@+id/img_investlist"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            app:srcCompat="@drawable/ic_main_graph_purple" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/robotoregular"
            android:text="투자 모집중"
            android:textColor="@color/purple"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/img_bar"
            app:layout_constraintTop_toBottomOf="@+id/img_investlist" />

        <TextView
            android:id="@+id/title_investlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/robotomedium"
            android:text="동물계의 유투버,김삿갓"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/img_bar"
            app:layout_constraintTop_toBottomOf="@+id/img_bar" />

        <ImageView
            android:id="@+id/img_investlist"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginTop="14dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_main_list_image" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:text="74%"
            android:textColor="@color/purple"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/img_bar"
            app:layout_constraintEnd_toEndOf="@+id/img_bar"
            app:layout_constraintTop_toBottomOf="@+id/img_investlist" />

        <TextView
            android:id="@+id/contents_investlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotolight"
            android:layout_marginTop="5dp"
            android:text="토스나 뱅크샐러드 같은 앱, 같이 만드 \n실 팀원 분들을 구합니다!"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/title_investlist"
            app:layout_constraintTop_toBottomOf="@+id/title_investlist" />
    </androidx.constraintlayout.widget.ConstraintLayout>